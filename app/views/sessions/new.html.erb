<%= form_for(:session, url: login_path) do |f| %>
	<div class="columns space-20-top">
		<div class="column">
    	<%= f.text_field :login, class: 'input', placeholder: 'Login' %>
		</div>
  </div>
	<div class="columns">
		<div class="column">
    	<%= f.password_field :password, class: 'input', placeholder: 'Senha' %>
		</div>
  </div>
  <%= f.submit "Login", class: "button" %>
  <hr>
<% end %>
