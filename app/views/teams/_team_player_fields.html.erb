<% liga = ActiveSupport::JSON.decode(@liga)['times'] %>
<div class="nested-fields">
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field is-grouped">
        <p class="control is-expanded">
          <%= f.select(:player, liga.map {|v| [ v['nome'] << ' - ' << v['nome_cartola'], v['slug'] ] }, { :prompt => 'Selecione...' }, { :class => 'input' }) %>
        </p>
        <%= link_to_remove_association button_tag("<i class='fa fa-trash-o'></i>&nbsp; Remover".html_safe, type: "button", class: "button"), f %>
      </div>
    </div>
  </div>
</div>